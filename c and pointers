第一章
2 注意NULL和EOF
#include<stdio.h>
#define max 100
int main()
{
	int i = 0;
	int j = 0;
	char input[10][max];
	while ( gets(input[i]) !=NULL)
		i++;
	while (j<i) {
		printf("第%d行", j);
		puts(input[j]);
		j++;
	}
	getchar();
	return 0;
}
#include<stdio.h>
#include<stdlib.h>
int main()
{
	int ch = 0;
	int i = 1;//行号
	int flag = 1;
	while ((ch = getchar()) != EOF)//EOF是标准输入的结尾
	{
		if (flag == 1)//注意比较是==
		{
			printf("<%d>", i);
			i++;
			flag++;
		}
		if (ch == '\n')
			flag = 1;
		putchar(ch);
	}
	system("pause");
	return 0;
}
